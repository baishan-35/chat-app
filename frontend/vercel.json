{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/api/auth/login",
      "dest": "${BACKEND_URL}/api/auth/login"
    },
    {
      "src": "/api/(.*)",
      "dest": "${BACKEND_URL}/api/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "BACKEND_URL": "https://your-backend-url.com"
  }
}